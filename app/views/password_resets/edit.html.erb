<%= stylesheet_link_tag 'password_resets_edit', media: 'all' %>

<div id="title" class="password_resets_edit">
  <div class="slogans">
		<div class="slogan">
		  Choose a new password
		</div>
		<div class="secondary-slogan">
			新しいパスワード
		</div>
	</div>
</div>

<div class="content">
  <div class="container">
    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">

      <%= form_for @user, :url => password_reset_path(@token), :html => {:method => :put} do |f| %>
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2 id="toc-prohibited-this-user-from-being-saved"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
       
            <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
       
        <div>
          <%= f.label :email, 'メールアドレス' %>
          <%= @user.email %>
        </div>
        <div class="field form-group">
          <%= f.label :password, '新規パスワード', class: 'mini-title' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="field form-group">
          <%= f.label :password_confirmation, '新規パスワード（確認）', class: 'mini-title' %><br />
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <div class="actions text-center">
          <%= f.submit 'パスワードを再設定', class: 'btn btn-o' %>
        </div>
      <% end %>
    </div>
  </div>
</div>