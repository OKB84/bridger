<%= stylesheet_link_tag 'password_resets_new', media: 'all' %>

<div id="title" class="password_resets_new">
  <div class="slogans">
		<div class="slogan">
		  Forgot Password?
		</div>
		<div class="secondary-slogan">
			パスワード再設定
		</div>
	</div>
</div>

<div class="content">
  <div class="container">
    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    
      <%= form_tag password_resets_path, :method => :post do %>
        <div class="field form-group">
          <%= label_tag :email, '登録済みのメールアドレス', class: 'mini-title' %><br />
          <%= text_field_tag :email, '', class: 'form-control' %>
          <div class="action text-right">
            <%= submit_tag "パスワード再設定メールを送信", class: 'btn btn-o' %>
          </div>
        </div>
      <% end %> 
      
    </div>
  </div>
</div>

