<%= stylesheet_link_tag 'message_index', media: 'all' %>

<div id="title" class="message_index">
  <div class="slogans">
		<div class="slogan">
		  Messages
		</div>
		<div class="secondary-slogan">
			メッセージ
		</div>
	</div>
</div>

<div class="content">
  <div class="container">
    <%= render 'layouts/flash_messages' %>
    <div class="row">
      <div class="mailbox col-sm-6">
        <h3><span>受信済み</span></h3>
        <table class="table">
          <thead>
            <tr>
              <th>差出人</th>
              <th>内容</th>
              <th>受信日時</th>
            </tr>
          </thead>
          <tbody>
            <% @received_messages.each do |message| %>
              <tr>
                <td width="20%"><%= link_to message.send_user.name, new_message_path(user_id: message.send_user_id) %></td>
                <td width="60%"><%= link_to message.content, message, class: 'message-content' %></td>
                <td width="20%"><%= message.created_at.getlocal("+09:00").strftime("%m/%d %H:%M") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="mailbox col-sm-6">
        <h3><span>送信済み</span></h3>
        <table class="table">
          <thead>
            <tr>
              <th>宛先</th>
              <th>内容</th>
              <th>送信日時</th>
            </tr>
          </thead>
          <tbody>
            <% @sended_messages.each do |message| %>
              <tr>
                <td width="20%"><%= link_to message.receive_user.name, new_message_path(user_id: message.receive_user_id) %></td>
                <td width="60%"><%= link_to message.content, message, class: 'message-content' %></td>
                <td width="20%"><%= message.created_at.getlocal("+09:00").strftime("%m/%d %H:%M") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


