<%= form_for review do |f| %>
  <%= f.hidden_field :from_user_id, value: current_user.id %>
  <%= f.hidden_field :to_user_id, value: @instructor.id %>
  <div class="field" id="rate">
    <%= f.label :rate, 'レッスンの満足度', class: 'title1 necessary' %><br />
    <%= f.hidden_field :rate, id: :review_rate %>
  </div>
  <div class="comment-title">
    <%= f.label :comment, 'レッスンを受けた感想、講師への要望等' %>
  </div>
  <div class="comment-form">
    <%= f.text_area :comment, :class => "form-control", :size => "10x10"  %><br>
  </div>
  <div class="actions text-center">
    <%= button_tag type: 'submit', class:'btn button-review' do %>
      <i class="fa fa-arrow-circle-right"></i>  <%= submit_name %>
    <% end %>
  </div>
<% end %>