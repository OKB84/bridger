<%= stylesheet_link_tag 'user_edit', media: 'all' %>

<div id="title" class="user_edit">
  <div class="slogans">
		<div class="slogan">
		  Account Details
		</div>
		<div class="secondary-slogan">
			ユーザー情報詳細
		</div>
	</div>
</div>

<div class="content">
  <div class="container">
    <%= render 'layouts/flash_messages' %>
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <%= render 'form', user: @user %>
        <div class="actions text-center">
          <%= button_tag type: 'submit', class:'btn button-user' do %>
            <i class="fa fa-arrow-circle-right"></i>  編集を完了する
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
   $('input:visible').eq(0).focus();
</script>