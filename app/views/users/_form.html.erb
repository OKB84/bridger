<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, '名前', class:'mini-title' %>
    <%= f.text_field :name, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email, 'メールアドレス', class:'mini-title' %>
    <%= f.text_field :email, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password, 'パスワード', class:'mini-title' %>
    <%= f.password_field :password, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'パスワード確認', class:'mini-title' %>
    <%= f.password_field :password_confirmation, class:'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :instrument_ids, '使用楽器', class:'mini-title' %><br />
    <%= f.collection_check_boxes :instrument_ids, Instrument.all, :id, :ins_name_ja, class:'checkbox' do |b| %>
      <%= b.check_box %>
      <%= b.label { b.text } %>&nbsp;&nbsp;
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :subject_ids, '気になる分野', class:'mini-title' %><br />
    <%= f.collection_check_boxes :subject_ids, Subject.all, :id, :subj_name_ja, class:'checkbox' do |b| %>
      <%= b.check_box %>
      <%= b.label { b.text } %>&nbsp;&nbsp;
    <% end %>
  </div>
  
  <div class="form-group">
    <%= f.label :language_ids, '使用言語', class:'mini-title' %><br />
    <%= f.collection_check_boxes :language_ids, Language.all, :id, :lang_name, class:'checkbox' do |b| %>
      <%= b.check_box %>
      <%= b.label { b.text } %>&nbsp;&nbsp;
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit '登録' %>
  </div>
<% end %>
